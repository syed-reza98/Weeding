# Production environment configuration for Heroku
APP_NAME="Wedding Website"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=

LOG_CHANNEL=stderr
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database - PostgreSQL for Heroku (auto-populated by Heroku)
DB_CONNECTION=pgsql
DB_HOST=
DB_PORT=5432
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Session Configuration for Production
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.herokuapp.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=none

# Broadcasting & Queues
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Cache - Redis for Heroku (auto-populated by Heroku Redis add-on)
CACHE_STORE=redis
CACHE_PREFIX=wedding_

# Redis configuration (auto-populated by Heroku Redis add-on)
REDIS_CLIENT=phpredis
REDIS_HOST=
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_TLS_URL=

# Mail configuration (configure with SendGrid or Mailgun add-on)
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# CORS configuration for production frontend
CORS_ALLOWED_ORIGINS=
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,Authorization,X-Requested-With"
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=86400
CORS_SUPPORTS_CREDENTIALS=true

# Sanctum configuration (update with your frontend domain)
SANCTUM_STATEFUL_DOMAINS=

# Security Configuration
SECURE_HEADERS=true
HSTS_MAX_AGE=31536000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_MINUTE=100

# File Upload Configuration
MAX_UPLOAD_SIZE=10240
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# AWS S3 Configuration (if using for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Optional Integrations
GOOGLE_MAPS_API_KEY=
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# Heroku-specific configurations
PORT=
DYNO=