APP_NAME="Wedding Website Backend"
APP_ENV=local
APP_KEY=base64:ywy4w/6l3wjBfW3wcONWRqQiuwsGd9Kucq6z/8n/KYY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration (Use PostgreSQL for production)
DB_CONNECTION=sqlite
DB_DATABASE=/home/runner/work/Weeding/Weeding/backend/database/database.sqlite

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.your-domain.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Broadcasting & Queues
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Cache Configuration (Use Redis in production)
CACHE_STORE=redis
CACHE_PREFIX=wedding_

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# CORS Configuration (Update with your frontend domains)
CORS_ALLOWED_ORIGINS="https://your-frontend-domain.com,https://your-frontend-domain.vercel.app"
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,Authorization,X-Requested-With"

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=your-frontend-domain.com,your-frontend-domain.vercel.app

# Security Headers
SECURE_HEADERS=true
HSTS_MAX_AGE=31536000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_MINUTE=100

# Image Upload Configuration
MAX_UPLOAD_SIZE=10240
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Google Maps API (if needed for location features)
GOOGLE_MAPS_API_KEY=

# Social Media Integration (optional)
FACEBOOK_APP_ID=
INSTAGRAM_ACCESS_TOKEN=

# Monitoring & Analytics (optional)
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=